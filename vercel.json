{
  "version": 2,
  "builds": [
    { 
      "src": "public/**/*", 
      "use": "@vercel/static-build",
      "config": {
        "static": {
          "source": "songs",
          "destination": "/songs"
        }
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/$1" }
  ]
}
